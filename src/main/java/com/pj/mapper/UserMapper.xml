	</select> -->
	<!-- <select id="getCommunityList" resultType="com.pj.domain.CommunityFreeBoardVO">
		SELECT
			id,title,writer,inserted
		FROM
			CommunityFreeBoard
	</select> -->
	<update id="update">
		UPDATE 
			User
		SET
			name=#{name},
			email=#{email},
			password=#{password},
			updated = NOW()
		WHERE
			id = #{id}
	</update>
	<delete id="deleteUserEmail">
		DELETE
		FROM
			User
		WHERE
			email = #{emailInfo}
	</delete>
</mapper>